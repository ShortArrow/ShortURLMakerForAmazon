{
  "name": "URL短縮ツール for Amazon",
  "version": "1.1",
  "description": "AmazonのURLを短くすることが出来ます。ボタンを押すと、短くしたURLをクリップボードにコピーします。",
  "manifest_version": 2,
  "default_locale":"ja",
  "permissions": ["activeTab","declarativeContent"],
  "background":{
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/get_started16.png",
      "32": "img/get_started32.png",
      "48": "img/get_started48.png",
      "128": "img/get_started128.png"
    }
  },
  "icons": {
    "16": "img/get_started16.png",
    "32": "img/get_started32.png",
    "48": "img/get_started48.png",
    "128": "img/get_started128.png"
  }
}